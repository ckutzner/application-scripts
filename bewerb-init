#!/bin/bash
# skript zum automatischen anlegen neuer git-branches & verzeichnisse für bewerbungen; im Bewerbungs-Oberverzeichnis zu gebrauchen
echo "Bitte gib einen kurzen Namen für den neuen branch an und drücke ENTER"
read jobname

git checkout -b stelle/$jobname
mkdir -p $(date +%m)/$jobname
cp anschreiben.tex $(date +%m)/$jobname/
cp ausschreibung_template.txt $(date +%m)/$jobname/ausschreibung.txt
#cp cvphoto.jpg $(date +%m)/$jobname/ # in case you use a photo in your cv
#cp unterschrift.jpg $(date +%m)/$jobname # in case you want to use a scan of your signature
git add .
git commit -am "new directory, added anschreiben + pix"
