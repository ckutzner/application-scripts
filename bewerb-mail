#!/bin/bash
# script to open thunderbird w/ prepopulated fields
# call from folder that contains application pdf
# make variables
#echo "Bitte gib noch einmal den Jobnamen ein: "
#read jobname
address=$(sed -n 10p jobdata.txt | cut -d: -f2 | sed "s/\s//")
echo $address 
echo "Bitte gib einen Betreff ein:"
read subj

# call thunderbird
thunderbird -compose "to=$address,subject=$subj,body='$(cat mail.txt)',attachment=$(echo $(pwd)/?ewerbung*)"
