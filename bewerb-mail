#!/bin/bash
# script to open thunderbird w/ prepopulated fields
# call from folder that contains application pdf
# make variables
#echo "Bitte gib noch einmal den Jobnamen ein: "
#read jobname
address=$(awk '($1 == "Email:") {print $2;}' jobdata.txt)
echo $address 

# call thunderbird
thunderbird -compose "to=$address,subject='$(head -1 current_mailsubject)',body='$(cat mail.txt)',attachment=$(echo $(pwd)/?ewerbung*)"
