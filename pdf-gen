#!/bin/bash
# generates pdf from anschreiben, concatenates it with current cv & testimonials

pdflatex anschreiben.tex

# add user prompt for naming
echo "Bitte gib deinen Namen ein:"
read name

# add user prompt: Where is CV?
echo "Bitte gib 1 ein, wenn das CV in diesem Ordner liegt, und 2, wenn das CV im 체bergeordneten Ordner des Monatsordners liegt:"
read cvwhere

pdflatex ../../cv-current.tex

# add user prompt: include work sample?
echo "Soll eine Arbeitsprobe angeh채ngt werden? Bitte gibt 'y' f체r 'ja' oder 'n' f체r 'nein' ein:"
read sample

rm *.aux *.log *.out

pdfjoin anschreiben.pdf cv-current.pdf ../../zeugnisse.pdf --outfile Bewerbung\ $name.pdf
